<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/gap">

    <android.support.v7.widget.SwitchCompat android:id="@+id/switch_equalizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:layout_gravity="right"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="@dimen/gap"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar android:id="@+id/seek_0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:splitTrack="false"
                    app:seekBarRotation="CW270"/>

            </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar android:id="@+id/seek_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:splitTrack="false"
                    app:seekBarRotation="CW270"/>

            </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar android:id="@+id/seek_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:splitTrack="false"
                    app:seekBarRotation="CW270"/>

            </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar android:id="@+id/seek_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:splitTrack="false"
                    app:seekBarRotation="CW270"/>

            </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar android:id="@+id/seek_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:splitTrack="false"
                    app:seekBarRotation="CW270"/>

            </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

        </LinearLayout>

    </FrameLayout>

    <SeekBar android:id="@+id/seek_bass_boost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="1000"/>

</LinearLayout>
